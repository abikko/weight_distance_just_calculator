<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BasicDesignTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BasicDesignTextView.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BasicDesignButton">
        <item name="android:background">@drawable/bg_blue_radius_10dp</item>
        <item name="android:textSize">@dimen/btn_small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BasicDesignButton.CalculatorButtons">
        <item name="android:textSize">@dimen/btn_default_text_size</item>
    </style>

    <style name="BasicDesignEditText">
        <item name="android:background">@drawable/bg_white_blue_corner_10dp_radius</item>
        <item name="android:padding">@dimen/edit_text_default_padding</item>
    </style>

    <dimen name="edit_text_default_padding">15dp</dimen>
</resources>